{
  "manifest_version": 3,
  "name": "engVid organizer",
  "description" : "Get quick access to engVid. Add lessons to your favourite list and mark the ones you have already completed.",
  "version": "1.0",
  "icons": {
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "tabs", "storage"
  ],
  "action": {
    "default_title": "engVid",
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.engvid.com/*"],
      "css": ["content-styles.css"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/checkbox_empty.svg",
        "images/checkbox.svg",
        "images/favorite_empty.svg",
        "images/favorite.svg"
      ],
      "matches": [ "https://*.engvid.com/*"]
    }
  ]
}